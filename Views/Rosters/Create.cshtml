@model ExtracurricularActivitiyLog.Models.Roster

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Roster</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="Clubs" asp-for="ClubID" class="control-label"></label>
                <select id="Clubs" asp-for="ClubID" class ="form-control" asp-items="ViewBag.ClubID"></select>
            </div>
            <div class="form-group">
                <label for="Students" asp-for="StudentID" class="control-label"></label>
                <select id="Students" asp-for="StudentID" class ="form-control" asp-items="ViewBag.StudentID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Positions" class="control-label"></label>
                <input asp-for="Positions" class="form-control" /> <!--Test-->
                <span asp-validation-for="Positions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="javascript:history.back()" id="back">Back to List</a>
</div>

@section Scripts {
    <script type="text/javascript">
        $(function () {
            $("#Clubs").chosen();
            $("#Students").chosen();
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
