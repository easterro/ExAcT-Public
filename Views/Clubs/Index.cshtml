@model IEnumerable<ExtracurricularActivitiyLog.Models.Club>

@{
    ViewData["Title"] = "Club List";
}


<body>
    <br />
    <h1>Club List</h1>

    <p>
        <a asp-action="Create" class="btn btn-lg btn-primary">Create New</a>
    </p>

    <form asp-action="Index" method="get">
        <div class="form-actions no-color">
            <p>
                Find by name: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
                <input type="submit" value="Search" class="btn btn-default" /> |
                <a asp-action="Index">Back to Full List</a>
            </p>
        </div>
    </form>

    <table class="table" >
        <thead>
            <tr>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">Club Name</a>
                </th>
                <th>
                    Club ID
                </th>
                <th>
                    Advisor
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]">Membership</a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClubName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClubID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Advisors)
                    </td>
                    <td>
                        @item.Rosters.Count()
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ClubID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ClubID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ClubID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
